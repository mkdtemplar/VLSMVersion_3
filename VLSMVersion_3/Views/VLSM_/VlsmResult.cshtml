@using System.Collections
@model VLSMVersion_3.Models.VLSM_Model
@{
    ViewData["Title"] = "VlsmResult";
}
<link rel="stylesheet" href="css/StyleTable.css"/>
<h1>VlsmResult</h1>

<div>
    <h4>VLSM_Model</h4>
    <hr />
    <table class="table">
        <thead>
        <tr>
            <th>Network ID</th>
            <th>CIDR</th>
            <th>Subnet Mask</th>
            <th>Number of Hosts per subnet</th>
            <th>LAN</th>
            <th>Number of subnets</th>
            <th>Range of usable IP addresses</th>
            <th>Broadcast ID</th>
        </tr>
        </thead>
        <tbody>
            
        </tbody>
    </table>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IP_Address)
        </dt>
        <dd class = "col-sm-10">
           @Html.DisplayFor(model => model)
        </dd>
        <dt class = "col-sm-2">
            @ViewData["IP_Address"]
        </dt>
        <dd class="col-sm-10">
            @{
                var i = 1;
                foreach (var item in (List<Lans>)ViewData["LansValues"])
                {
                    <p>Lan[@(i++)]:@(" ") @item.InitialLanValues</p>
                }
            }
        </dd>
        <dt class="col-sm-2">
           Result:
        </dt>
        <dd class="col-sm-10">
            @{
                foreach (var item in (IEnumerable)ViewData["FinalResult"])
                {
                    @item@("--") <br/>
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cidrValue)
        </dt>
        <dd class = "col-sm-10">
            @ViewData["cidrValue"]
            
        </dd>
        <dt class = "col-sm-2">
            <label>Netword ID:</label>
        </dt>
        <dd class = "col-sm-10">
            @ViewData["NetworkID"]
        </dd>
        <dt class = "col-sm-2">
            <label>Total hosts:</label>
        </dt>
        <dd class = "col-sm-10">
            @ViewData["TotalHosts"]
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Create">New Calcuation</a>
</div>
