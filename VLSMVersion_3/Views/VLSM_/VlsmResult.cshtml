@using System.Collections
@model VLSMVersion_3.Models.VLSM_Model
@{
    ViewData["Title"] = "VlsmResult";
}

<h1>VlsmResult</h1>

<div>
    <h4>VLSM_Model</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IP_Address)
        </dt>
        <dd class = "col-sm-10">
           @ViewData["IP_Address"]
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LansValues)
        </dt>
        <dd class="col-sm-10">
            @{
                var i = 1;
                foreach (var item in (List<Lans>)ViewData["LansValues"])
                {
                    <p>Lan[@(i++)]:@(" ") @item.InitialLanValues</p>
                }
            }
        </dd>
        <dt class="col-sm-2">
            Final result
        </dt>
        <dd class="col-sm-10">
            function for calculsation
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cidrValue)
        </dt>
        <dd class = "col-sm-10">
            @ViewData["cidrValue"]
        </dd>
        <dt class = "col-sm-2">
            <label>Netword ID:</label>
        </dt>
        <dd class = "col-sm-10">
            @ViewData["NetworkID"]
        </dd>
        <dt class = "col-sm-2">
            <label>Total hosts:</label>
        </dt>
        <dd class = "col-sm-10">
            @ViewData["TotalHosts"]
        </dd>
    </dl>
</div>
